{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2021", // Node.js 16
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "jsx": "preserve",
    /* Modules */
    "module": "node16",
    "moduleResolution": "node16",
    /* Emit */
    "declaration": true,
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Completeness */
    "skipLibCheck": true,
    /* Type Checking */
    "strict": true
  }
}
